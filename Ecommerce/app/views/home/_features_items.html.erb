<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Features Items</h2>
    <% @results[:features_items].each do |item| %>
    <div class="col-sm-4">
        <div class="product-image-wrapper">
            <div class="single-products">
                <div class="productinfo text-center">
                    <input type="hidden" id="<%= item.id %>" class="id" value="">
                     <a href="/product-details/<%= item.title.parameterize%>~<%=item.id%>">
                     <% if item.image.attached?  %>
                          <%= image_tag url_for(item.image) , alt: "img",  class: "imageProduct" ,size: "100x100" %>
                     <% end %>
                    </a>
                    <h2 class="price">$<%= item.price  %></h2>
                    <p class="title"><%= item.title  %></p>
                    <div>
                        <i class="fa fa-star" style="color: #fe950f;"></i>
                        <i class="fa fa-star" style="color: #fe950f;"></i>
                        <i class="fa fa-star" style="color: #fe950f;"></i>
                        <i class="fa fa-star" style="color: #fe950f;"></i>
                        <i class="fa fa-star" style="color: #fe950f;"></i>
                    </div>
                    <% if item.sold > 0 %>
                        <p class="title">Sold: <%= item.sold %> products</p>
                    <% else %>
                        <p class="title"> &nbsp;</p>
                    <% end %>
                    <a href="javascript:void(0)" class="btn btn-default add-to-cart"><i
                            class="fa fa-shopping-cart"></i>Add to cart</a>
                </div>
              
            </div>
            <div class="choose">
                <ul class="nav nav-pills nav-justified">
                    <li><a href="/product-details/<%= item.title.parameterize%>~<%=item.id%>"><i class="fa fa-plus-square"></i>See more...</a></li>
                </ul>
            </div>
        </div>
    </div>
    <% end %>
</div>
<!--features_items-->