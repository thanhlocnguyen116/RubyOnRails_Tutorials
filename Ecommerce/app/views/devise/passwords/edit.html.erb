
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 ">
            <div class="login-form" ><!--login form-->
             <h2 style="font-size: 15px"><%= t("change_your_password") %></h2>
             <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <%= f.hidden_field :reset_password_token %>

                <div class="field">
                    <%= f.label :password, t("new_password") %><br />
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                    <% end %>
                    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" ,  placeholder: "New password"%>
                </div>

              <div class="field">
                <%= f.label :password_confirmation, t("confirm_password") %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
              </div>

              <div class="actions" style="margin-bottom: 15px;">
                  <%= f.button t("change_my_password"), class: "btn btn-default" %>
              </div>
          <% end %>
            </div><!--/login form-->
        </div>
    </div>
</div>




