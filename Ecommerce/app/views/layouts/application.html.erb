<!DOCTYPE html>
<html>
  <head>
    <title>Home | Mr.Katsu</title>
    <meta id="metaDescription" name="description" content="Trần Hữu Thắng, shop mr.katsu, buy everything your need">
    <meta property="og:description" content="Trần Hữu Thắng, shop mr.katsu, shopmrkatsu.tk, shopmrkatsu" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://shopmrkatsu.tk/" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'jquery' %>
    <%= javascript_include_tag 'bootstrap.min' %>
    <%= javascript_include_tag 'jquery-filterable' %>
    <link rel="shortcut icon" href="/assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/assets/ico/apple-touch-icon-57-precomposed.png">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.jsdelivr.net/npm/js-cookie@3.0.1"></script>
    <%=javascript_include_tag('frontend/categories.js') %>
    <%=stylesheet_link_tag('price-range.css') %>
    <%=stylesheet_link_tag('font-awesome.min.css') %>
    <%=stylesheet_link_tag('animate.css') %>
    <%=javascript_include_tag('jquery.js') %>
    <%=javascript_include_tag('bootstrap.min.js') %>
    <%=javascript_include_tag('jquery.scrollUp.min.js') %>
    <%=javascript_include_tag('price-range.js') %>
    <%=javascript_include_tag('jquery.prettyPhoto.js') %>
    <%=javascript_include_tag('manager/product.js') %>
    <%=javascript_include_tag('manager/cart.js') %>
    <%=javascript_include_tag('lightbox.min.js') %>
    <%=stylesheet_link_tag('lightbox.min.css') %>
    <%=javascript_include_tag('handlerbar.js') %>
    <%=javascript_include_tag('query.ez-plus.js') %>
    <%=javascript_include_tag('chartkick.min.js') %>
    <%=javascript_include_tag('jquery.cookie.js') %>
    <%=stylesheet_link_tag('slick.css') %>
    <%=javascript_include_tag('slick.min.js') %>
  </head>
  <body>
    <!-- LOADER -->
    <%= render 'layouts/header' %>
    <% if notice%>
      <div id="notice_wraper">
        <p class="notice"><%= notice %></p>
      </div>
    <% elsif flash %>
      <% flash.each do |message_type, message| %>
        <div  style="align-items: center;text-align: center;background: #e8a62d59;color: red;" class="alert alert-<%= message_type %>"><span><%= message %></span></div>
      <% end %>
    <% end %>
    <div id="loader" style="display: flex;justify-content: center;align-items: center;">
      <div class="position-center-center">
        <div class="ldr"></div>
      </div>
    </div>
    <div class="show_body" style="display:none">
      <script>
        $("#loader").fadeOut("slow");
        $(".show_body").css("display","block")
      </script>
      <%= yield %>
      <script>
        setTimeout(function() {
          $('#notice_wraper').fadeOut("slow", function () {
            $(this).remove();
          });
        }, 2000);
      </script>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
