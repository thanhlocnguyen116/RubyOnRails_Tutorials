<script id="list-search-template" type="text/x-handlebars-template">
  <div class="features_items">
    <h2 class="title text-center"> Result search for {{keyword}}</h2>
    {{#if products.length }}
      {{#each products}}
      <div class="col-sm-4 col-xs-6">
        <div class="product-image-wrapper">
            <div class="single-products">
                <div class="productinfo text-center">
                    <input type="hidden" id="{{id}}" class="id" value="{{id}}">
                    <a href="/<%=I18n.locale %>/product-details/{{title}}~{{id}}"> <img class="imageProduct" src="{{image_url1}}" alt="" /></a>
                    <h2 class="price">${{price}}</h2>
                    <p class="title">{{title}}</p>
                </div>
            </div>
            <div class="choose">
                <ul class="nav nav-pills nav-justified">
                    <li><a href="/<%=I18n.locale %>/product-details/{{title}}~{{id}}"><i class="fa fa-plus-square"></i><%= t 'loadMore.text' %></a></li>
                    <li><a href="javascript:void(0)" class="quick_view"  product-id= "{{id}}>" data-toggle="modal" data-target="#exampleModalCenter"><i class="fa fa-plus-square"></i> <%= t 'quick_view.text' %></a></li>
                </ul>
            </div>
        </div>
      </div>
      {{/each}}
    </div>
  {{else}}
    <div class="features_items">
      <h2 style=" text-align: center;"> <%= t("messages.search_product") %></h2>
    </div>
  {{/if}}
</script>
