    <%=javascript_include_tag('lodash.min.js') %>
  </head>
  <body>
    <!-- LOADER -->
    <%= render 'layouts/header' %>
    <% if notice%>
      <div id="notice_wraper">
        <p class="notice"><%= notice %></p>
      </div>
    <% elsif flash %>
      <% flash.each do |message_type, message| %>
        <div  style="align-items: center;text-align: center;background: #e8a62d59;color: red;" class="alert alert-<%= message_type %>"><span><%= message %></span></div>
      <% end %>
    <% end %>
    <div id="loader" style="display: flex;justify-content: center;align-items: center;">
      <div class="position-center-center">
        <div class="ldr"></div>
      </div>
    </div>
    <div class="show_body" style="display:none">
      <script>
        $("#loader").fadeOut("slow");
        $(".show_body").css("display","block")
      </script>
      <!-- Modal -->
      <div class="modal fade product-details"  id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      </div>
      <%= yield %>
      <script>
        setTimeout(function() {
          $('#notice_wraper').fadeOut("slow", function () {
            $(this).remove();
          });
        }, 2000);
      </script>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
