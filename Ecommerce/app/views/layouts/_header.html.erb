  }

  #list-notifications>li {
  	width: 100%;
  	border: 1px solid #ebebeb
  }
</style>
<script>
  $(document).off().on("click", ".navbar-toggle",function(e) {
  	 $(this).attr("show-dropdown", true)
  });
  function myFunction() {
  	var x = document.getElementById("list-notifications");
  	if (x.style.display === "none") {
