<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <div class="left-sidebar">
          <!--category-->
          <h2>Category</h2>
          <%= render 'home/category' %>
          <!--/category-->
          <!--brands_products-->
          <div class="brands_products">
            <h2>Brands</h2>
            <%= render 'home/brands' %>
          </div>
          <!--/brands_products-->
        </div>
      </div>
      <div class="col-sm-9 padding-right">
        <div class="features_items">
          <!--features_items-->
          <h2 class="title text-center">Products</h2>
          <% if @results[:products].present? %>
            <% @results[:products].each do |item| %>
              <div class="col-sm-4">
                <div class="product-image-wrapper">
                  <div class="single-products">
                    <div class="productinfo text-center">
                      <input type="hidden" id="<%= item.id %>" class="id" value="">
                      <a href="/<%=I18n.locale %>/product-details/<%= item.title.parameterize%>~<%=item.id%>"> <img class="imageProduct" src="<%= url_for(item.image) if item.image.attached? %>" alt="" /></a>
                      <h2 class="price">$<%= item.price  %></h2>
                      <p class="title"><%= item.title  %></p>
                      <a href="javascript:void(0)" class="btn btn-default add-to-cart"><i
                                        class="fa fa-shopping-cart"></i>Add to cart</a>
                    </div>
                  </div>
                  <div class="choose">
                    <ul class="nav nav-pills nav-justified">
                      <li><a href="/<%=I18n.locale %>/product-details/<%= item.title.parameterize%>~<%=item.id%>"><i class="fa fa-plus-square"></i>See more...</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="">
          <% if @results[:products].present? %>
            <div style="text-align: center">
              <%=  paginate @results[:products], theme: 'twitter-bootstrap-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
