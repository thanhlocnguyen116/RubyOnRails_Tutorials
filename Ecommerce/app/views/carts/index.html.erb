</section>
<section id="do_action">
    <div class="container">
        <div class="heading">
            <h3>Paymment</h3>
            <p>During the checkout process, if you wait too long, please login again, and order again.</p>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="chose_area">
                    <ul class="user_option">
                        <li>
                            <label>Use Gift Voucher</label>
                        </li>
                    </ul>
                    <ul class="user_info">
                        <li class="single_field zip-field">
                            <label>Zip Code:</label>
                            <input style="border: 1px solid#797977;" type="text" class="voucher_code" >
                        </li>
                    </ul>
                    <a class="btn btn-default voucher" href="javascript:void(0)">Get Voucher</a>
                </div>
            </div>
           
            <div class="col-sm-6">
                <div class="total_area" >
                <span>Service Shipping </span>
                 <select class="form-select" aria-label="Default select example">
                 <% if @results[:shippings].size %>
                    <% @results[:shippings].each_with_index do |item,index| %>
                         <option <%= index == 0 ? "selected" : ""%> value="<%= item.id %>"><%= item.name %> - $<%= item.price %> - <%= item.description %></option>
                    <% end %>
                 <% end %>
                       
                </select>
                    <ul>
                        <li>Cart Sub Total <span class="Cart_Sub_Total">$0</span></li>
                        <li class="shipping-cost">Shipping Cost <span class="price_shipping">$0</span></li>
                        <li>Total <span class="totalOrder">$0</span></li>
                    </ul>         
                    <% if user_signed_in? %>
                        <% if current_user.address.blank? || current_user.city.blank? %>
                            <a class="btn btn-warning" style="margin-left: 40px" href="<%= edit_user_registration_path %>">Please add your address while checkout</a>
                        <% else %>
                         <div class="bg-light py-6 service-5">
                            <div class="container">
                                <!-- Row  -->
                                <div class="row"> 
                                    <div class="col-md-6 wrap-service5-box" style="width: 100%; overflow: hidden"  >
                                        <div class="card card-shadow border-0 mb-4">
                                            <div class="card-body d-flex">
                                                <div class="mr-4 mb-2 text-success-gradiant" style="font-size: 20px">Billing Information</div>
                                                <div class="">
                                                    <h6 class="font-weight-medium"><a href="/profile" class="linking">Address: <%= current_user.address %> </br>Phone : <%= current_user.mobile %></a></h6>
                                                    <p class="mt-3">City:  <h5 class="city" style="color: red;   font-size: 16px; "><%=current_user.city.name %></h5>.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a class="btn btn-default check_out" href="javascript:void(0)"  id="btnFetch" style="display: none">Check Out</a>
                            <a class="btn btn-default checkout_with_momo" href="javascript:void(0)" style="margin-top: 19px; margin-left: 20px; background: #FE980F; color: white">Payment with MOMO (testing)</a>

                        </div>	                        
                        <% end %>                     
                    <% else %>
                        <a href="javascript:void(0)" style="color: #333; background-color: #fe980f; border-color: #ccc; text-align: center; margin-left: 40px;" class="btn btn-default <%= user_signed_in? ? "check_out" : ""  %>"
                            onClick="Swal.fire({
                                icon: 'warning',
                                title: 'You must login to the checkout',
                            });"
                        >Check Out</a>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#do_action-->
<script id="list-cart-template" type="text/x-handlebars-template">
    {{#if carts.length }}
    {{#each carts}} 
        <tr class="list-cart" id={{id}}>
            <td class="cart_product" style="width: 70px;">
                <a href="/product-details/{{ name_product}}~{{id}}"><img style="width:100px; height:100px" src="{{image_product}}"></a>
            </td>
            <td class="cart_name">
                <h4><a href="">{{name_product}}</a></h4>
            </td>
            <td class="cart_name">
                <h4><a href="">{{size_product}}</a></h4>
            </td>
            <td class="cart_price">
                <p>${{price_product}}</p>
            </td>
            <td class="cart_quantity" >
                <div class="cart_quantity_button">
                    <button class="cart_quantity_up" > + </button>
                    <input class="cart_quantity_input" type="number" name="quantity" value="{{quantity}}" size="2"  min="1" max="20" >
                    <button class="cart_quantity_down" > - </button>
                </div>
            </td>
            <td class="cart_total">
                <p class="cart_total_price">${{ total_price}}</p>
            </td>
            <td class="cart_delete">
                <button class="cart_quantity_delete"><i class="fa fa-times"></i></button>
            </td>
        </tr>
    {{/each}}
{{else}}
    <style type="text/css">
    thead,.voucher, .checkout_with_momo{
        display:none
    }
    </style>
    <h2 style=" text-align: center;"> Shopping cart is empty </h2>
{{/if}}

</script>
