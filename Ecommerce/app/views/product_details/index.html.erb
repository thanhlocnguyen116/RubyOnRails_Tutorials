                            <p><b><%= t 'product.status' %>:</b>  <%= @results[:product].availability.status == "1" ? "Instock" : "OutStock" if @results[:product].availability.present? %></p>
                            <p><b><%= t 'product.brand' %>:</b> <%= @results[:product].brand ? @results[:product].brand.name : "" %></p>
